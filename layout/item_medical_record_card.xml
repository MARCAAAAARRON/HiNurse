<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Record Number/Icon -->
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_chat_bubble_out"
            android:gravity="center">
            
            <TextView
                android:id="@+id/textRecordNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/purple"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold2" />
        </LinearLayout>

        <!-- Name, Date and Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNurseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nurse Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold2" />

            <TextView
                android:id="@+id/textRecordDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Nov 2, 2025"
                android:textColor="@color/purple"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_more"
            android:tint="@color/purple"
            android:rotation="90"
            android:contentDescription="More" />

    </LinearLayout>

</androidx.cardview.widget.CardView>


