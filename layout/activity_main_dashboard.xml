<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/textViewGreeting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ¤” Hi, Ummm, Thinking "

                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.HiNurse.Headline2" />

            <ImageView
                android:id="@+id/avatarIcon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="centerCrop"
                android:background="@drawable/button_shape2"
                android:padding="4dp"
                android:contentDescription="Profile" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How can we help you today?"
            android:textAppearance="@style/TextAppearance.HiNurse.Body1"
            android:textColor="@color/white"
            android:background="@drawable/button_shape2"
            android:padding="12dp"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Options Grid -->
            <GridLayout
                android:id="@+id/gridLayoutOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:useDefaultMargins="false"
                android:layout_marginBottom="24dp">

                <!-- Ask a Nurse -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAskNurse"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="18dp"
                        android:background="@drawable/button_shape">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ask"
                            android:textAppearance="@style/TextAppearance.HiNurse.Headline2"
                            android:textColor="@color/white"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nurse"
                            android:textAppearance="@style/TextAppearance.HiNurse.CardTitle"
                            android:textColor="@color/white"
                            android:gravity="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Book Appointment -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBookAppointment"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="18dp"
                        android:background="@drawable/button_shape2">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Book"
                            android:textAppearance="@style/TextAppearance.HiNurse.Headline2"
                            android:textColor="@color/white"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="It"
                            android:textAppearance="@style/TextAppearance.HiNurse.CardTitle"
                            android:textColor="@color/white"
                            android:gravity="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Health Tips -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHealthTips"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="18dp"
                        android:background="@drawable/button_shape2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Health"
                            android:textAppearance="@style/TextAppearance.HiNurse.Headline2"
                            android:textColor="@color/white"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tips"
                            android:textAppearance="@style/TextAppearance.HiNurse.CardTitle"
                            android:textColor="@color/white"
                            android:gravity="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- My Records -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMyRecords"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="18dp"
                        android:background="@drawable/button_shape">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My"
                            android:textAppearance="@style/TextAppearance.HiNurse.Headline2"
                            android:textColor="@color/white"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Records"
                            android:textAppearance="@style/TextAppearance.HiNurse.CardTitle"
                            android:textColor="@color/white"
                            android:gravity="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Nurse Clara -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSmartTriage"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="18dp"
                        android:background="@drawable/button_shape">

                        <ImageView
                            android:layout_width="183dp"
                            android:layout_height="125dp"
                            android:contentDescription="Nurse Clara Mascot"
                            android:scaleType="fitCenter"
                            android:src="@drawable/nurseclara" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- My Profile (6th tile) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMyProfile"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="18dp"
                        android:background="@drawable/button_shape2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My"
                            android:textAppearance="@style/TextAppearance.HiNurse.Headline2"
                            android:textColor="@color/white"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:textAppearance="@style/TextAppearance.HiNurse.CardTitle"
                            android:textColor="@color/white"
                            android:gravity="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

            

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/button_shape2"
        android:padding="14dp"
        android:layout_margin="16dp"
        android:elevation="6dp">


        <LinearLayout
            android:id="@+id/navChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¬"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textAppearance="@style/TextAppearance.HiNurse.Caption"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navAppointments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“…"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointments"
                android:textAppearance="@style/TextAppearance.HiNurse.Caption"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textAppearance="@style/TextAppearance.HiNurse.Caption"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

