<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Back"
            app:tint="@color/purple" />

        <TextView
            android:id="@+id/textViewHeaderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:textColor="@color/purple"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold2" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/background_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingBottom="24dp"
            android:paddingTop="8dp">

            <!-- Account -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:contentPadding="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/edit_text_border2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account"
                        android:textAppearance="@style/TextAppearance.HiNurse.CardTitle"
                        android:textColor="@color/purple"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/buttonChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Change password"
                        android:background="@drawable/button_shape2"
                        app:backgroundTint="@color/purple"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/buttonLogout"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Log out"
                        android:background="@drawable/button_shape2"
                        app:backgroundTint="@color/purple"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/buttonViewProfile"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="View profile"
                        android:background="@android:color/transparent"
                        android:textColor="@color/purple" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            

            <!-- Notifications -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:contentPadding="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/edit_text_border2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textAppearance="@style/TextAppearance.HiNurse.CardTitle"
                        android:textColor="@color/purple"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enable push notifications"
                            android:textAppearance="@style/TextAppearance.HiNurse.Body1"
                            android:textColor="@color/purple"/>
                        <Switch
                            android:id="@+id/switchNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reminder frequency"
                        android:textAppearance="@style/TextAppearance.HiNurse.Body1"
                        android:textColor="@color/purple" />

                    <Spinner
                        android:id="@+id/spinnerReminderFrequency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            

            <!-- Privacy & Security -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:contentPadding="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/edit_text_border2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy and Security"
                        android:textAppearance="@style/TextAppearance.HiNurse.CardTitle"
                        android:textColor="@color/purple"
                        android:layout_marginBottom="12dp" />

                    
                    <Button
                        android:id="@+id/buttonClearCache"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Clear cache"
                        android:background="@android:color/transparent"
                        android:textColor="@color/purple"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/buttonPermissions"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Permissions overview"
                        android:background="@android:color/transparent"
                        android:textColor="@color/purple"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/buttonDataExport"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Data export"
                        android:background="@android:color/transparent"
                        android:textColor="@color/purple"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/buttonDataDelete"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Data delete"
                        android:background="@android:color/transparent"
                        android:textColor="@color/purple" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- About -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/edit_text_border2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textAppearance="@style/TextAppearance.HiNurse.CardTitle"
                        android:textColor="@color/purple"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/textAppVersion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="App version"
                        android:textColor="@color/purple"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/buttonDeveloperInfo"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Developer info"
                        android:background="@android:color/transparent"
                        android:textColor="@color/purple"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/buttonOpenSourceLicenses"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Open-source licenses"
                        android:background="@android:color/transparent"
                        android:textColor="@color/purple" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
