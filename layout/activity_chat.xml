<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple">

    <!-- Header with back button, profile, name, online status, and call buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/purple">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="@color/white"
            android:contentDescription="Back"
            android:layout_marginEnd="12dp" />

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_chat_bubble_out"
            android:contentDescription="Profile" />

        <!-- Name -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewContactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nurse"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold2" />

        </LinearLayout>

        <!-- Video Call Button -->
        <ImageButton
            android:id="@+id/buttonVideoCall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_camera"
            android:tint="@color/white"
            android:contentDescription="Video Call"
            android:layout_marginEnd="8dp" />

        <!-- Voice Call Button -->
        <ImageButton
            android:id="@+id/buttonVoiceCall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_call"
            android:tint="@color/white"
            android:contentDescription="Voice Call" />

    </LinearLayout>

    <!-- Messages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/purple" />

    <!-- Input Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/purple"
        android:gravity="center_vertical">

        <!-- Microphone Button -->
        <ImageButton
            android:id="@+id/buttonMicrophone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_btn_speak_now"
            android:tint="@color/white"
            android:contentDescription="Microphone"
            android:layout_marginEnd="8dp" />

        <!-- Message Input -->
        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:maxHeight="120dp"
            android:hint="Type your message..."
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:textSize="14sp"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:imeOptions="actionSend"
            android:layout_marginEnd="8dp" />

        <!-- Paperclip/Attach Button -->
        <ImageButton
            android:id="@+id/buttonAttach"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_attachment"
            android:tint="@color/white"
            android:contentDescription="Attach"
            android:layout_marginEnd="8dp" />

        <!-- Send Button (Circular with paper plane icon) -->
        <ImageButton
            android:id="@+id/buttonSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_send_button"
            android:src="@android:drawable/ic_menu_send"
            android:tint="@color/white"
            android:contentDescription="Send" />

    </LinearLayout>

</LinearLayout>
